(library
 (name dynload_stub)
 (modules dynload_stub)
 (flags (-annot -g -w -4-33-40-41))
 (c_names dynloader))

(executable
 (name jit_entry)
 (modules trace_list jit_entry)
 (libraries str unix dynload_stub minCaml bc_jit bc_lib utils)
 (flags (-annot -w -4-33-40-41))
 (modes
  (native exe)
  (native object)
  (native shared_object)))

(rule
 (targets test_interp.s)
 (deps test_interp.mcml)
 (action (run ../bin/min_caml.exe -o %{targets} %{deps} -type tjit)))

(rule
 (targets test_interp.exe)
 (deps jit_entry.exe%{ext_obj} stub.c libmincaml.S jit_entry_interop.s jit_entry_wrap.c test_interp.s)
 (action
  (run %{cc} -rdynamic -o %{targets} -I %{ocaml_where} -L %{ocaml_where} -I . %{deps}
    %{ocaml-config:native_c_libraries} -ldl)))

(alias
 (name runtest)
 (deps test_interp.mcml)
 (action (run ./test_interp.exe %{deps})))
