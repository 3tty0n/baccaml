(executable
 (name jit_entry)
 (public_name baccaml.entry)
 (modules jit_entry)
 (libraries runtime)
 (modes
  (native exe)
  (native object)
  (native shared_object)))

(rule
 (targets stub.c)
 (deps ../runtime/stub.c)
 (action (copy %{deps} %{targets})))

(rule
 (targets interop.c)
 (deps ../runtime/interop.c)
 (action (copy %{deps} %{targets})))

(rule
 (targets libmincaml.S)
 (deps ../runtime/libmincaml.S)
 (action (copy %{deps} %{targets})))

(rule
 (targets test_interp.s)
 (deps test_interp.mcml)
 (action (run ../bin/min_caml.exe -o %{targets} %{deps} -type mjit)))

(rule
 (targets test_interp.exe)
 (deps jit_entry.exe%{ext_obj} stub.c interop.c libmincaml.S test_interp.s)
 (action
  (run %{cc} -g -m32 -rdynamic -o %{targets} -I %{ocaml_where} -L %{ocaml_where} -I . %{deps}
    %{ocaml-config:native_c_libraries} -ldl)))

(alias
 (name runtest)
 (deps test_interp.mcml)
 (action (run ./test_interp.exe %{deps})))
